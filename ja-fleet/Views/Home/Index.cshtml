@using jafleet.Models
@using jafleet.EF
@{
    ViewData["Title"] = "Top";

    List<Airline> ana = new List<Airline>();
    List<Airline> jal = new List<Airline>();
    List<Airline> lcc = new List<Airline>();
    List<Airline> other = new List<Airline>();

    using (var context = new jafleetContext())
    {
        ana = context.Airline.Where(p => p.AirlineGroupCode == "A").OrderBy(p => p.DisplayOrder).ToList();
        jal = context.Airline.Where(p => p.AirlineGroupCode == "J").OrderBy(p => p.DisplayOrder).ToList();
        lcc = context.Airline.Where(p => p.AirlineGroupCode == "L").OrderBy(p => p.DisplayOrder).ToList();
        other = context.Airline.Where(p => p.AirlineGroupCode == "O").OrderBy(p => p.DisplayOrder).ToList();
    }
}

<h1>JA-Fleet</h1>
<h4>【本邦航空会社機材一覧サイト】</h4>
<div style="width:50%">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <a data-toggle="collapse" data-parent="#sampleAccordion" href="#ana">
                    ANAグループ
                </a>
            </h3>
        </div>
        <div id="ana" class="panel-collapse collapse">
            <div class="panel-body">
                <h4>
                    <a asp-area="" asp-controller="Aircraft" asp-action="AirlineGroup" asp-route-id="A">全て</a><br />
                </h4>
                @foreach (Airline a in ana)
                {
                    <h4>
                        <a asp-area="" asp-controller="Aircraft" asp-action="Airline" asp-route-id="@a.AirlineCode">@a.AirlineNameJpShort</a><br />
                    </h4>
                }

            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
