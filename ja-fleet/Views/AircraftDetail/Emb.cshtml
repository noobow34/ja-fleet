@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>埋め込みページ</title>
</head>
<body>
    @if (string.IsNullOrEmpty(ViewBag.Tag))
    {
        <blockquote class="twitter-tweet"><a href="@ViewBag.TweetUrl"></a></blockquote>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

    }
    else
    {
        @Html.Raw(ViewBag.Tag)
    }
</body>
</html>
